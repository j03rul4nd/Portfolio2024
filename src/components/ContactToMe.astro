<script>
document.getElementById('copyBtn').addEventListener('click', function() {
    event.preventDefault()
    // Seleccionar el texto del correo electrónico
    var emailText = document.getElementById('defaultEmail');
    var range = document.createRange();
    range.selectNode(emailText);
    window.getSelection().removeAllRanges();
    window.getSelection().addRange(range);

    // Intentar copiar el texto al portapapeles
    try {
        document.execCommand('copy');
        console.log('Correo electrónico copiado');
    } catch (err) {
        console.error('No se pudo copiar el correo electrónico', err);
    }

    // Limpiar la selección de texto
    window.getSelection().removeAllRanges();

    confetti({
        particleCount: 100,
        spread: 70,
        origin: { y: 0.6 }
    });
});
</script>
