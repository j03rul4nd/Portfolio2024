<style is:global>
  canvas{
      border-top-left-radius: 0.5rem;
      border-top-right-radius: 0.5rem;
  }
</style>

<style >
  .Carditem:hover img, .Carditem:hover #CubeSection {
    transform: scale(1.05);
    transition: transform 0.3s ease-in-out;
}
.Carditem img, .Carditem:hover #CubeSection {
    transition: transform 0.3s ease-in-out;
}
  .Carditem{
        flex: 1 1 calc(50% - 20px); 
        overflow: hidden;
    }

.shadow:hover {
    box-shadow: rgb(240 242 248 / 49%) 0px 0px 0px 2px;
    transition: all 0.2s ease-out 0s;
}
.shadow{
  transition: all 0.3s ease-out 0s;
  will-change: box-shadow, transform;
}

  a.readmoreInfo:hover {
    cursor: pointer;
    transition: all 0.2s ease-out 0s;
    box-shadow: rgb(240, 242, 248) 0px 0px 0px 5px;
  }

  a.readmoreInfo {
      background-image:none;
      width: fit-content;
      height: 36px;
      padding: 0px 12px;
      top: 20px;
      right: 20px;
      border-radius: 18px;
      box-shadow: rgb(240, 242, 248) 0px 0px 0px 2px;
      border: none;
      background: transparent;
      display: flex;
      -webkit-box-align: center;
      align-items: center;
      transition: all 0.3s ease-out 0s;
      will-change: box-shadow, transform;
  }
  .ListCardProyects{
    display: flex;
    flex-direction: row;
    gap: 1rem;
    flex-wrap: nowrap;
    align-items: flex-start;
    flex-wrap: wrap;
  }
  @media (max-width: 480px) {
    .ListCardProyects{
      flex-direction: column;
    }
    
  }
</style>



